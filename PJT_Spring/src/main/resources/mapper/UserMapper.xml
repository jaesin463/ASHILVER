<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.pjt.model.dao.UserDao">
	<!-- 전체 유저 목록 -->
	<select id="selectAll" resultType="User">
		SELECT *
		FROM user
	</select>
	
	<!-- 아이디로 유저 검색 -->
	<select id="searchById" resultType="User" parameterType="String">
		SELECT *
		FROM user
		WHERE id LIKE CONCAT('%', #{word}, '%')
	</select>
	
	<!-- 한 유저 선택 -->
	<select id="selectOne" parameterType="String" resultType="User">
		SELECT *
		FROM user
		WHERE id = #{id}
	</select>
	
	<!-- 유저 등록 -->
	<insert id="insertUser" parameterType="User">
		INSERT INTO user (id, password, name, email, birthday, gender, image)
		VALUES (#{id}, #{password}, #{name}, #{email}, #{birthday}, #{gender}, #{image})
	</insert>
	
	<!-- 유저 탈퇴 -->
	<delete id="deleteUser" parameterType="String">
		DELETE FROM user
		WHERE id = #{id}
	</delete>
</mapper>