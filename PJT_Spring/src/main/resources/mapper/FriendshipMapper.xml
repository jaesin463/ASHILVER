<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.pjt.model.dao.FriendshipDao">

	<!-- 팔로워 조회 -->
	<select id="selectFollower" resultType="Friendship"
		parameterType="String">
		SELECT *
		FROM `friendship`
		WHERE user2_id = #{user_id}
	</select>

	<!-- 팔로잉 조회 -->
	<select id="selectFollowing" resultType="Friendship"
		parameterType="String">
		SELECT *
		FROM `friendship`
		WHERE user1_id = #{user_id}
	</select>

	<!-- 팔로우 시작 -->
	<insert id="insertFollowing" parameterType="Friendship">
		INSERT INTO
		`friendship` (user1_id, user2_id)
		VALUES (#{user1_id}, #{user2_id})
	</insert>

	<!-- 팔로우 취소 -->
	<delete id="deleteFollowing" parameterType="Friendship">
		DELETE FROM
		`friendship`
		WHERE user1_id = #{user1_id}
		AND user2_id =
		#{user2_id};
	</delete>
</mapper>